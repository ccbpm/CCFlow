    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >
    
    <Grid x:Name="LayoutRoot"  >
        <Path 
            Name="picRect"  Width="120" Height="44"  
            Fill="White" 
            Stroke="#FF002B84"  StrokeThickness="1"
            Margin="2,2,2,2"
            >
            <Path.Data >
                <PathGeometry  >
                    <PathGeometry.Figures  >
                        <PathFigure StartPoint="20,2">
                            <PathFigure.Segments>
                                <LineSegment  Point="20,2"/>
                                <LineSegment  Point="100,2"/>
                                <LineSegment  Point="120,22"/>
                                <LineSegment  Point="100,42"/>
                                <LineSegment  Point="20,42"/>
                                <LineSegment  Point="0,22"/>
                                <LineSegment  Point="20,2"/>
                            </PathFigure.Segments>
                        </PathFigure>
                    </PathGeometry.Figures>
                </PathGeometry>
            </Path.Data>
        </Path>
    </Grid>
</UserControl>
