        <sdk:Label Content="密   码:" Height="28" HorizontalAlignment="Left" Margin="69,102,0,0" Name="label2" VerticalAlignment="Top" Width="82" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="119,69,0,0" Name="textBox1" Text="admin" VerticalAlignment="Top" Width="158" />
        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="119,102,0,0" Name="passwordBox1" VerticalAlignment="Top" Width="158" Password="pub" />
