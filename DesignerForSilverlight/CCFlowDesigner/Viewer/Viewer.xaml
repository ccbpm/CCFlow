<UserControl 
    Name="UcRoot" 
    x:Class="BP.Viewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:BP"
    >
    <Grid Name="LayoutRoot">
        
        <ScrollViewer Name="svContainer"  Background="White" BorderBrush="Beige"  BorderThickness="0" HorizontalContentAlignment="Center"  
                       VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
            >
            <ScrollViewer.Content>
                <StackPanel>
                    <Canvas Name="paint" Canvas.ZIndex="1000"  Background="White" VerticalAlignment="Top" HorizontalAlignment="Left"  ></Canvas>
                </StackPanel>
            </ScrollViewer.Content>
        </ScrollViewer>

    </Grid>

</UserControl>
