<UserControl x:Class="BP.Picture.SubThreadNode"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
 >
    <Grid x:Name="LayoutRoot">
        <Path 
            Name="picRect" 
            Width="128" Height="64"   Margin="2,2,2,2"  
            Fill="White" Stroke="#FF002B84"  StrokeThickness="1">
            <Path.Data >
                <PathGeometry  >
                    <PathGeometry.Figures  >
                        <PathFigure StartPoint="63,2"  >
                            <!--起点坐标（左，高）-->
                            <PathFigure.Segments  >
                                <LineSegment  Point="63,2"/>
                                <LineSegment  Point="126,32"/>
                                <LineSegment  Point="63,62"/>
                                <LineSegment  Point="0,32"/>
                                <LineSegment  Point="63,2"/>
                            </PathFigure.Segments>
                        </PathFigure>
                    </PathGeometry.Figures>
                </PathGeometry>
            </Path.Data>
        </Path> 
    </Grid>
</UserControl>
