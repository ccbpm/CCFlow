<UserControl x:Class="BP.Controls.FtpFileLink"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
 
        <StackPanel x:Name="LayoutRoot" Orientation="Horizontal" Cursor="Hand" Background="White"
                MouseEnter="StackPanel_MouseEnter"
                MouseLeave="StackPanel_MouseLeave"
                >

        <Image x:Name="img" Width="48" Height="48" Stretch="None" Source="/CCFlowDesigner;component/Images/MenuItem/FlowDoc.png"  />
        <Image x:Name="imgFile" Width="48" Height="48" Visibility="Collapsed" Stretch="None" Source="/CCFlowDesigner;component/Images/MenuItem/log.png"  />
        <TextBlock 
           HorizontalAlignment="Left"  x:Name="txtLink"  Foreground="Blue"
          VerticalAlignment="Center" TextDecorations="None"   FontSize="18"/>
    </StackPanel>
 
</UserControl>
